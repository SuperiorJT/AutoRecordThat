<Window x:Class="AutoRecordThat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoRecordThat"
        mc:Ignorable="d"
        Title="Auto Record That" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cbWindowTitles" Margin="100,10,10,0" VerticalAlignment="Top" Grid.Column="1" Height="22" SelectionChanged="UpdateSelectedWindow"/>
        <Label Content="Capture Target:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.488,-0.067" Width="90" Height="26" Grid.Column="1"/>

    </Grid>
</Window>
